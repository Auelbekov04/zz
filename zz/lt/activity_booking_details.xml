<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">



    <!-- Название отеля -->
    <TextView
        android:id="@+id/hotelNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hotel Name"
        android:textSize="18sp"
        android:padding="8dp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" /> <!-- Отступ между названием и списком номеров -->

    <!-- RecyclerView для номеров -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/roomsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- RecyclerView для отзывов -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reviewsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" /> <!-- Отступ между отзывами и названием отеля -->

</LinearLayout>
